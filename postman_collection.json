              "raw": "{\n  \"username\": \"player2\",\n  \"email\": \"player2@chess.com\",\n  \"password\": \"chess123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
